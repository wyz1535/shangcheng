<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cn.wupeng.sc">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        tools:replace="android:icon, android:theme"
        android:allowBackup="true"
        android:icon="@drawable/sy"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
        <activity android:name=".activity.GoodsDetailActivity"/>
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.GuideActivity"></activity>
        <activity android:name=".activity.ScreenedActivity"></activity>
        <activity android:name=".activity.WelcomeActivity"></activity>

        <activity android:name=".activity.SearchActivity"></activity>
        <activity android:name=".activity.ProductListActivity"></activity>
        <activity android:name=".activity.NewbieGuideActivity"></activity>
        <activity android:name=".activity.MoreAboutActivity"></activity>

        <service android:name=".service.TimeService"/>
    </application>
</manifest>
