<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    cardview:cardCornerRadius="10dp"
    cardview:cardElevation="4dp"
    cardview:contentPadding="5dp"
    android:id="@+id/limit_buy_cardView"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/iv_food"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:src="@drawable/c_54"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorGrey"
            android:text="@string/time"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:maxWidth="@dimen/product_iv_width"
            android:text="爷爷泡的茶啊啊啊啊啊啊"
            android:textSize="18dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_marginTop="@dimen/common_px"
                android:layout_marginLeft="@dimen/common_px"
                android:id="@+id/tv_food_new_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$39.8"
                android:textColor="@color/colorOragge"
                android:textSize="@dimen/SpecialPrice_tv_size"/>

            <TextView
                android:layout_alignBottom="@+id/tv_food_new_price"
                android:layout_toRightOf="@+id/tv_food_new_price"
                android:layout_marginLeft="@dimen/mid_px"
                android:id="@+id/tv_food_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$39.8"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/limit_buy_tv_size"/>

            <ImageView
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/tv_food_new_price"
                android:layout_marginLeft="15dp"
                android:id="@+id/iv_special"
                android:src="@drawable/c_53"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$39.8"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/limit_buy_tv_size"/>

        </RelativeLayout>

        <Button
            android:id="@+id/bt_quick_buy"
            android:textSize="@dimen/limit_buy_tv_size"
            android:background="@drawable/c_58"
            android:textColor="@color/colorWhite"
            android:text="@string/limit_buy"
            android:layout_width="80dp"
            android:layout_height="30dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>