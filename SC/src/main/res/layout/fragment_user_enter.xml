<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4">

    <include layout="@layout/top_head"></include>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <ImageView
            android:id="@+id/tv_zhanghao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_11"
            android:padding="15dp"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/et_import_account"
            style="@style/MoreAccountRegister"
            android:layout_toRightOf="@id/tv_zhanghao"
            android:hint="请输入手机号或邮箱"
            android:singleLine="true"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#2000"></View>
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <ImageView
            android:id="@+id/tv_mima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_12"
            android:padding="15dp"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/et_import_password"
            style="@style/MoreAccountRegister"
            android:layout_toRightOf="@id/tv_mima"
            android:hint="请输入密码"
            android:singleLine="true"
            android:password="true"/>
    </RelativeLayout>

    <CheckBox
        android:id="@+id/more_remember_password"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记住密码,直接登录"
        android:textColor="#3000"/>

    <Button
        android:id="@+id/more_enter"
        android:background="@drawable/more_button_enter_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="登录"
        android:textSize="16sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/more_immediately_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即注册 "
            android:textColor="#4000"
            android:textSize="14dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="#4000"></View>

        <TextView
            android:id="@+id/more_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 忘记密码?"
            android:textColor="#4000"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>