<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:background="#FF7624">

        <ImageView

            android:clickable="true"
            android:id="@+id/iv_pay_back"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_selector" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:text="支付及配送方式"
            android:textColor="#fff"
            android:textSize="36px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin"
            android:text="发票类型"
            android:textColor="#333"
            android:textSize="@dimen/activity_text_size" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_money_pay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/invoice_type_selector"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:visibility="gone"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/h_21" />

                <TextView
                    android:id="@+id/tv_money_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="到付—现金"
                    android:textColor="@color/account_type_color_selector"
                    android:textSize="@dimen/activity_text_second_size" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_pos_pay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/invoice_type_selector"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/h_21"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_pos_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="到付—POS"
                    android:textColor="@color/account_type_color_selector"
                    android:textSize="@dimen/activity_text_second_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_zhifubao_pay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/invoice_type_selector"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/h_21"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_zfb_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="支付宝"
                    android:textColor="@color/account_type_color_selector"
                    android:textSize="@dimen/activity_text_second_size" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/on_line"></LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin"
            android:text="配送方式"
            android:textColor="#333"
            android:textSize="@dimen/activity_text_size" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_door_service"
                    android:padding="10dp"
                    android:background="@drawable/invoice_type_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="物流配送上门"
                    android:textColor="@color/account_type_color_selector"
                    android:textSize="@dimen/activity_text_second_size" />

                <TextView
                    android:id="@+id/tv_third_party"
                    android:padding="10dp"
                    android:background="@drawable/invoice_type_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="第三方物流配送"
                    android:textColor="@color/account_type_color_selector"
                    android:textSize="@dimen/activity_text_second_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/on_line"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin"
            android:text="送货时间"
            android:textColor="#333"
            android:textSize="@dimen/activity_text_size" />



            <TextView
                android:id="@+id/tv_nothing_time"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/invoice_type_selector"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="不限送货时间"
                android:textColor="@color/account_type_color_selector"
                android:textSize="@dimen/activity_text_second_size" />

            <TextView
                android:id="@+id/tv_weeked_time"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/invoice_type_selector"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="只周末送货"
                android:textColor="@color/account_type_color_selector"
                android:textSize="@dimen/activity_text_second_size" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_work_time"
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/invoice_type_selector"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="只工作日送货"
            android:textColor="@color/account_type_color_selector"
            android:textSize="@dimen/activity_text_second_size" />
    </LinearLayout>

    <Button
        android:id="@+id/payAndDeliveryClick"
        android:layout_width="match_parent"
        android:layout_height="78px"
        android:textSize="@dimen/activity_text_size"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="78px"
        android:background="@drawable/invoice_button_selector"
        android:textColor="#fff"
        android:text="确定" />

</LinearLayout>