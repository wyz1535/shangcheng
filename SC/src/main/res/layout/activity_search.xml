<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_head"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/et_import_keywords"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_width="200dp"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:text="巧克力"
        />

    <Button
        android:id="@+id/bt_keywords"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="搜索"
        android:textSize="10dp"
        android:textColor="#fff"
        android:background="@drawable/more_telephone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFAA77">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search_2"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="热门搜索"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_hot_search_1"
            android:layout_marginLeft="15dp"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="1"
            android:textColor="#C2C2C2"
            android:gravity="center_horizontal"
            android:background="@drawable/history_button"/>
        <TextView
            android:id="@+id/tv_hot_search_2"
            android:layout_marginLeft="15dp"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="2"
            android:textColor="#C2C2C2"
            android:gravity="center_horizontal"
            android:background="@drawable/history_button"/>
        <TextView
            android:id="@+id/tv_hot_search_3"
            android:layout_marginLeft="15dp"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="3"
            android:textColor="#C2C2C2"
            android:gravity="center_horizontal"
            android:background="@drawable/history_button"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_hot_search_4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="4"
        android:textColor="#C2C2C2"
        android:gravity="center_horizontal"
        android:background="@drawable/history_button"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFAA77">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="搜索历史"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="金丝猴"
            android:textColor="#C2C2C2"
            android:gravity="center_horizontal"
            android:background="@drawable/history_button"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="好吃嘴"
            android:textColor="#C2C2C2"
            android:gravity="center_horizontal"
            android:background="@drawable/history_button"/>
    </LinearLayout>
</LinearLayout>