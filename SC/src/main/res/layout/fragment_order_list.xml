    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:background="#ff7624"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_order_list_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:clickable="true"
            android:src="@drawable/bg_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的订单"
            android:textColor="#fff"
            android:textSize="36px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="#f4f4f4"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30px"
            android:layout_marginRight="-1dp"
            android:layout_marginTop="40px"
            android:background="@drawable/within_one_mouth_selector"
            android:clickable="true"
            android:paddingBottom="10px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="10px"
            android:text="近一个月订单"
            android:textColor="@color/order_list_text_color_selector"
            android:textSize="26px" />

        <TextView
            android:id="@+id/tv_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30px"
            android:layout_marginTop="40px"
            android:background="@drawable/before_one_mouth_selector"
            android:clickable="true"
            android:paddingBottom="10px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="10px"
            android:text="一个月前订单"
            android:textColor="@color/order_list_text_color_selector"
            android:textSize="26px" />

        <TextView
            android:id="@+id/tv_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30px"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="40px"
            android:background="@drawable/canceled_order_selector"
            android:clickable="true"
            android:paddingBottom="10px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="10px"
            android:text="已取消订单"
            android:textColor="@color/order_list_text_color_selector"
            android:textSize="26px" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_order_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>

        <TextView
            android:id="@+id/tv_null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您现在还没有订单哦！"
            android:textSize="36px"
            android:textColor="#999999"
            android:layout_marginLeft="190px"
            android:layout_marginTop="390px"/>

    </FrameLayout>
</LinearLayout>
