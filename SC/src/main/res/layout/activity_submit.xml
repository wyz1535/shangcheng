<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:background="#FF7624">

            <ImageView
                android:clickable="true"
                android:id="@+id/iv_submit_back"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back_selector" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:text="提交成功"
                android:textColor="#fff"
                android:textSize="36px" />

        </RelativeLayout>


    <TextView
        android:layout_margin="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="亲！您的订单已经提交，我们会尽快安排发货额"
        android:textSize="@dimen/activity_text_size"
        android:textColor="#666666"
        />
    <TextView
        android:id="@+id/tv_goods_number"
        android:layout_marginLeft="14dp"
        android:textSize="@dimen/activity_text_second_size"
        android:textColor="#88666666"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="订单号:1001001001"
        />
    <TextView
        android:id="@+id/tv_should_money"
        android:layout_marginLeft="14dp"
        android:textSize="@dimen/activity_text_second_size"
        android:textColor="#88666666"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="应付金额:¥243.00"
        />
    <TextView
        android:id="@+id/tv_pay_type"
        android:layout_marginLeft="14dp"
        android:textSize="@dimen/activity_text_second_size"
        android:textColor="#88666666"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="支付方式:在线支付"
        />
    <Button
        android:id="@+id/bt_go_shop"
        android:layout_width="match_parent"
        android:layout_height="78px"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/invoice_button_selector"
        android:text="继续购物"
        android:textSize="@dimen/activity_text_size"
        android:textColor="#fff"
        />
    <Button
        android:id="@+id/bt_look_goods"
        android:layout_width="match_parent"
        android:layout_height="78px"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/submit_look_goods_button_selecotr"
        android:text="查看订单"
        android:textSize="@dimen/activity_text_size"
        android:textColor="#FF7624"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="如有疑问，请拨打客服电话"
        android:layout_marginTop="14dp"
        android:textSize="@dimen/activity_text_size"
        android:gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/tv_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="400_008_2422"
        android:layout_marginTop="7dp"
        android:textSize="@dimen/activity_text_size"
        android:gravity="center_horizontal"
        android:textColor="@color/submit_number_selector"
        />
</LinearLayout>