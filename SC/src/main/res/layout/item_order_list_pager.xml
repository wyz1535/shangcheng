<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_order_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="40px"
                android:paddingTop="25px"
                android:text="订单编号:"
                android:textColor="#999999"
                android:textSize="26px"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="40px"
                android:paddingTop="25px"
                android:text="1000098382"
                android:textColor="#999999"
                android:textSize="26px" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_order_total_amount"
            android:layout_below="@+id/ll_order_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="40px"
                android:paddingTop="25px"
                android:text="订单总额:"
                android:textColor="#999999"
                android:textSize="26px"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_order_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="40px"
                android:paddingTop="25px"
                android:text="￥194.00"
                android:textColor="#999999"
                android:textSize="26px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="40px"
                android:paddingTop="25px"
                android:text="订单状态:"
                android:layout_marginLeft="90px"
                android:textColor="#999999"
                android:textSize="26px"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_order_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="40px"
                android:paddingTop="25px"
                android:text="未确认"
                android:textColor="#999999"
                android:textSize="26px" />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/ll_order_total_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="40px"
                android:paddingTop="25px"
                android:text="2016/01/03"
                android:textColor="#999999"
                android:textSize="26px"/>

            <TextView
                android:id="@+id/tv_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55px"
                android:paddingLeft="40px"
                android:paddingTop="25px"
                android:paddingBottom="30px"
                android:text="22:22:22"
                android:textColor="#999999"
                android:textSize="26px" />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/h_3"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40px"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#f4f4f4">

    </LinearLayout>

</LinearLayout>