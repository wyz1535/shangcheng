<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">

    <cn.itcast.wh20.sidepulldelete.view.SidePullDeleteLayout
        android:id="@+id/sidePullDeleteLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#669e9e9e">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            >

            <Button
                android:layout_margin="5dp"
                android:background="@color/colorOragge"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:id="@+id/sc_delete"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/noclick"
                android:id="@+id/cb_item_shoppingcart"/>
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/photo_bg">
                <ImageView
                    android:layout_margin="0.1dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/photo_1"
                    android:id="@+id/iv_shoppingcart_item"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="超级大的一坨SHIT哈哈哈哈啊啊"
                    android:singleLine="true"
                    android:id="@+id/tv_shoppingcart_item_name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥68.00"
                    android:id="@+id/tv_shoppingcart_item_true_price"
                    android:layout_below="@+id/tv_shoppingcart_item_name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥88.00"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/tv_shoppingcart_item_old_price"
                    android:layout_toRightOf="@id/tv_shoppingcart_item_true_price"
                    android:layout_below="@+id/tv_shoppingcart_item_name"
                    />
                <LinearLayout
                    android:layout_marginBottom="10px"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_shoppingcart_item_true_price">

                    <TextView
                        android:clickable="true"
                        android:background="@drawable/within_one_mouth_selector"
                        android:text="-"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="27dp"
                        android:id="@+id/tv_cut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="27dp"
                        />

                    <TextView
                        android:id="@+id/tv_goods_count_shoppingcart"
                        android:background="@drawable/before_one_mouth_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"

                        />
                    <TextView
                        android:clickable="true"
                        android:id="@+id/tv_add"
                        android:text="+"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@drawable/canceled_order_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

            </RelativeLayout>



        </LinearLayout>


    </cn.itcast.wh20.sidepulldelete.view.SidePullDeleteLayout>

</LinearLayout>
