<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/colorOragge"
        android:layout_width="match_parent"
        android:layout_height="96px"
        >
        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_main_back"
            android:src="@drawable/h_4_1"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv__top_head_text"
            android:layout_centerInParent="true"
            android:textSize="40px"
            android:text="收藏夹"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"/>
        <Button
            android:id="@+id/bt_collection_clear"

            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="130px"
            android:layout_height="60px"
            android:text="清空"
            android:background="@drawable/h_2"
            android:textColor="@color/colorOragge"/>
    </RelativeLayout>
</LinearLayout>