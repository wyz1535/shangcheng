<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:background="#FF7624">

        <ImageView

            android:id="@+id/iv_invoice_back"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:src="@drawable/back_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:text="填写发票信息"
            android:textColor="#fff"
            android:textSize="36px" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin"
            android:text="发票类型"
            android:textColor="#333"
            android:textSize="@dimen/activity_text_size" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_page_invoice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/invoice_type_selector"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/iv_page_right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/h_21"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="纸质发票"

                    android:textColor="@color/account_type_color_selector"

                    android:textSize="@dimen/activity_text_second_size" />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/ll_electron_invoice"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/invoice_type_selector"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/iv_electron_right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/h_21"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="电子发票"

                    android:textColor="@color/account_type_color_selector"

                    android:textSize="@dimen/activity_text_second_size" />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/ll_tax_invoice"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.2"
                android:background="@drawable/invoice_type_selector"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/iv_tax_right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/h_21"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="增值税发票"

                    android:textColor="@color/account_type_color_selector"

                    android:textSize="@dimen/activity_text_second_size" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/on_line"
        android:layout_height="10dp"
        android:background="#88888888"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin"
            android:text="发票抬头"
            android:textColor="#333"
            android:textSize="@dimen/activity_text_size" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin"
            android:orientation="horizontal">

            <!--<LinearLayout-->
                <!--android:id="@+id/ll_no__invoice"-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/invoice_type_selector"-->
                <!--android:clickable="true"-->
                <!--android:gravity="center"-->
                <!--android:orientation="horizontal"-->
                <!--android:padding="5dp">-->

                <!--<ImageView-->
                    <!--android:id="@+id/iv_no_invoice_right"-->
                    <!--android:layout_width="20dp"-->
                    <!--android:layout_height="20dp"-->
                    <!--android:src="@drawable/h_21"-->
                    <!--android:visibility="gone" />-->

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="5dp"-->
                    <!--android:text="不要发票"-->
                    <!--android:textColor="@color/account_type_color_selector"-->
                    <!--android:textSize="@dimen/activity_text_second_size" />-->
            <!--</LinearLayout>-->

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:id="@+id/ll_person_invoice"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/invoice_type_selector"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/iv_person_right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/h_21"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="个人"
                    android:textColor="@color/account_type_color_selector"
                    android:textSize="@dimen/activity_text_second_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_unit_invoice"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/invoice_type_selector"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/iv_unit_right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/h_21"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="单位"

                    android:textColor="@color/account_type_color_selector"

                    android:textSize="@dimen/activity_text_second_size" />

            </LinearLayout>

        </LinearLayout>
        <EditText
            android:id="@+id/et_invoice_infom"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入发票内容"
            />
    </LinearLayout>

    <LinearLayout
        style="@style/on_line"
        android:layout_height="10dp"
        android:background="#88888888"></LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin"
        android:text="发票内容"
        android:textColor="#333"
        android:textSize="@dimen/activity_text_size" />

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图书"
            android:textColor="@color/b_text_color_selector" />

        <RadioButton
            android:id="@+id/rb_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服饰"
            android:textColor="@color/b_text_color_selector" />

        <RadioButton
            android:id="@+id/rb_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="耗材"
            android:textColor="@color/b_text_color_selector" />

        <RadioButton
            android:id="@+id/rb_application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="软件"
            android:textColor="@color/b_text_color_selector" />

        <RadioButton
            android:id="@+id/rb_informatoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资料"
            android:textColor="@color/b_text_color_selector" />
    </RadioGroup>

    <Button
        android:id="@+id/invoiceClick"
        android:layout_width="match_parent"
        android:layout_height="78px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="36px"
        android:background="@drawable/invoice_button_selector"
        android:text="确定"
        android:textColor="#fff"
        android:textSize="@dimen/activity_text_size" />

</LinearLayout>