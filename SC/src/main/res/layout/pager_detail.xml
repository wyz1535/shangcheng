<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
        android:layout_marginTop="20px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="套餐详情"
        android:layout_marginLeft="40px"
        android:textSize="30px"/>
    <LinearLayout
        android:layout_marginTop="10px"
        style="@style/horizontalLine"></LinearLayout>
    <LinearLayout
        android:layout_marginTop="30px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px">
        <ImageView

            android:src="@drawable/c_52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/j"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/c_51"/>
        <ImageView
            android:src="@drawable/j"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/c_50"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp"
            android:id="@+id/checkBox" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="78dp"
            android:layout_marginEnd="78dp" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="82dp"
            android:layout_marginStart="82dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/checkBox"
            android:layout_toEndOf="@+id/checkBox" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="60px"
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorOragge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:text="￥68.00"
            android:id="@+id/tv_goods_price" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/colorOragge"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:text="￥39.80"
            android:layout_marginLeft="61dp"
            android:layout_marginStart="61dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv_goods_price"
            android:layout_toEndOf="@+id/tv_goods_price" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/colorOragge"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:text="￥10.05"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="58dp"
            android:layout_marginEnd="58dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="75px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24px"
            android:text="￥88.00"
            android:id="@+id/tv_goods_true_price" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24px"
            android:text="￥42.80"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv_goods_true_price"
            android:layout_toEndOf="@+id/tv_goods_true_price"
            android:layout_marginLeft="73dp"
            android:layout_marginStart="73dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24px"
            android:text="￥12.00"
            android:layout_marginRight="58dp"
            android:layout_marginEnd="58dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="50px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="90dp"
            android:layout_marginEnd="90dp"
            android:id="@+id/tv_total_price" />
        <TextView
            android:textColor="@color/colorOragge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="118.3"
            android:textSize="30px"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/tv_total_price"
            android:layout_alignStart="@+id/tv_total_price"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp" />
    </RelativeLayout>
    <TextView
        android:text="查看详情"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30px"/>
    <LinearLayout
        android:layout_marginTop="15px"
        style="@style/horizontalLine"></LinearLayout>
    <RelativeLayout
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="220px">
        <TextView
            android:layout_marginTop="10px"
            android:text="【商品品牌】："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tv_goods_brand" />
        <TextView
            android:layout_marginTop="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天喔"
            android:id="@+id/textView5"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv_goods_brand"
            android:layout_toEndOf="@+id/tv_goods_brand" />
        <TextView

            android:text="【商品名称】："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_goods_names"
            android:layout_below="@+id/tv_goods_brand"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10px"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_marginTop="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="鲜卤鸭锁骨"
            android:id="@+id/tv_goods_name"
            android:layout_below="@+id/textView5"
            android:layout_toRightOf="@+id/tv_goods_brand"
            android:layout_toEndOf="@+id/tv_goods_brand" />
        <TextView
            android:layout_marginTop="10px"
            android:text="【商品规格】："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_goods_standards"
            android:layout_below="@+id/tv_goods_names"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10px"
            android:layout_height="wrap_content"
            android:text="250g"
            android:id="@+id/tv_goods_standard"
            android:layout_below="@+id/tv_goods_name"
            android:layout_toRightOf="@+id/tv_goods_names"
            android:layout_toEndOf="@+id/tv_goods_names" />
        <TextView
            android:text="【商品配料】："
            android:layout_marginTop="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_goods_burdening"
            android:layout_below="@+id/tv_goods_standards"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10px"
            android:layout_height="wrap_content"
            android:text="鸭锁骨 ，白砂糖，食用味精，鸡精，香辛料等"
            android:id="@+id/tv_goods_standardes"
            android:layout_below="@+id/tv_goods_standards"
            android:layout_toRightOf="@+id/tv_goods_standards"
            android:layout_toEndOf="@+id/tv_goods_standards" />
    </RelativeLayout>
     <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="230px">
         <TextView
             android:layout_marginTop="10px"
             android:text="【储藏方法】："
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/tv_goods_method"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true" />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10px"
             android:text="常温，阴凉处，干燥，避免阳光。"
             android:id="@+id/tv_goods_methods"

             android:layout_toRightOf="@+id/tv_goods_method"
             android:layout_toEndOf="@+id/tv_goods_method" />
         <TextView
             android:text="【保质期限】："
             android:layout_marginTop="10px"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/tv_prtect_health"
             android:layout_below="@+id/tv_goods_method"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true" />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="12个月"
             android:id="@+id/tv_prtect_healthy"
             android:layout_alignTop="@+id/tv_prtect_health"
             android:layout_alignRight="@+id/tv_goods_burdeninies"
             android:layout_alignEnd="@+id/tv_goods_burdeninies" />
         <TextView
             android:layout_marginTop="10px"
             android:text="【生产标准】："
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/tv_product_standard"
             android:layout_below="@+id/tv_prtect_health"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true" />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="GB/T23456"
             android:id="@+id/tv_goods_burdeninies"
             android:layout_centerVertical="true"
             android:layout_toRightOf="@+id/tv_product_standard"
             android:layout_toEndOf="@+id/tv_product_standard" />

         <TextView
             android:layout_marginTop="10px"
             android:text="【生产许可】："
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/tv_product_allow"
             android:layout_alignTop="@+id/tv_product_allowes"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true" />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="QS123456789"
             android:id="@+id/tv_product_allowes"
             android:layout_below="@+id/tv_goods_burdeninies"
             android:layout_toRightOf="@+id/tv_product_allow"
             android:layout_toEndOf="@+id/tv_product_allow" />

     </RelativeLayout>


    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/b_1"
        android:layout_width="match_parent"
        android:layout_height="400dp" />
            <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/b_2"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/b_3"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        />
            <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/b_4"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        />
            <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/b_5"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        />
            <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/b_3"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        />

        </LinearLayout>

    </ScrollView>

</LinearLayout>